# Sigma environment template
# Copy this file to .env and fill in provider-specific credentials.
# Keep the populated file out of version control.

# Default LLM endpoint label to use when multiple entries exist in llms.txt
SIGMA_DEFAULT_LLM=

# Whisper speech-to-text service authentication
SIGMA_WHISPER_URL=https://api.your-whisper-provider.example/v1/audio/transcriptions
SIGMA_WHISPER_AUTH_TOKEN=
# Optional scheme prefix for the Authorization header (defaults to "Bearer")
SIGMA_WHISPER_AUTH_SCHEME=

# LLM routing authentication
SIGMA_LLM_URL=https://api.your-llm-provider.example/v1/chat/completions
SIGMA_LLM_AUTH_TOKEN=
# Optional scheme prefix for the Authorization header (defaults to "Bearer")
SIGMA_LLM_AUTH_SCHEME=

# Directory where captured audio should be staged when running host-side tests
SIGMA_AUDIO_DIR=
